pipeline {
    agent any

    environment {
        EMAIL_RECIPIENTS = 's224028935@deakin.au.edu'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/tchdy/8.2CDevSecOps.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'npm test > test.log'
                        currentBuild.result = 'SUCCESS'
                    } catch (err) {
                        currentBuild.result = 'FAILURE'
                        echo "Test failed"
                        throw err
                    } finally {
                        emailext (
                            to: "${EMAIL_RECIPIENTS}",
                            subject: "Test Stage - ${currentBuild.currentResult}",
                            body: "Please find the test results attached.",
                            attachmentsPattern: '**/test.log',
                            compress: false
                        )
                    }
                }
            }
        }

        stage('Generate Coverage Report') {
            steps {
                sh 'npm run coverage || true'
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    try {
                        sh 'npm audit > audit.log || exit 0'
                        currentBuild.result = 'SUCCESS'
                    } catch (err) {
                        currentBuild.result = 'FAILURE'
                        echo "Security scan failed"
                        throw err
                    } finally {
                        emailext (
                            to: "${EMAIL_RECIPIENTS}",
                            subject: "Security Scan Stage - ${currentBuild.currentResult}",
                            body: "Please find the security scan results attached.",
                            attachmentsPattern: '**/audit.log',
                            compress: false
                        )
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
